{% if nextcloud_install_tls and nextcloud_tls_enforce %}
server {
    listen 80;
{% if nextcloud_ipv6 %}
    listen [::]:80;
{% endif %}
    server_name {{ nextcloud_trusted_domain }};

    # Enforce HTTPS
    return 301 https://$server_name$request_uri;
}
{% endif %}

server {
{% if not nextcloud_install_tls or not nextcloud_tls_enforce %}
    listen 80;
{% if nextcloud_ipv6 %}
    listen [::]:80;
{% endif %}
{% endif %}

    server_name {{ nextcloud_trusted_domain }};

    access_log /var/log/nginx/{{ nextcloud_instance_name }}-access.log;
    error_log  /var/log/nginx/{{ nextcloud_instance_name }}-error.log error;

    proxy_connect_timeout 1d;
    proxy_send_timeout 1d;
    proxy_buffering off;
    send_timeout 1d;
    sendfile off;
    index index.html index.htm;

{% if nextcloud_install_tls %}
    listen 443      ssl http2;
{% if nextcloud_ipv6 %}
    listen [::]:443 ssl http2;
{% endif %}

# [SSL]
    ssl_certificate {{ nextcloud_tls_cert_file }};
    ssl_certificate_key {{ nextcloud_tls_cert_key_file }};
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:{{ nextcloud_tls_session_cache_size }};
    ssl_prefer_server_ciphers off;
{% if nextcloud_mozilla_modern_ssl_profile %}
    ssl_protocols TLSv1.3;
{% else %}
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-CCM:ECDHE-ECDSA-AES128-CCM:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305';
{% endif %}
{% endif %}

    # set max upload size and increase upload timeout:
    client_max_body_size {{ nextcloud_max_upload_size }};
    client_body_timeout {{ nextcloud_max_upload_time }};

    location / {
        try_files $uri $uri/ =404;
    }

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass https://{{ nextcloud_websrv_address }};
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Forwarded-Proto https;
        proxy_set_header X-Forwarded-Ssl on;
        proxy_set_header X-Content-Type-Options nosniff;
        proxy_set_header X-Robots-Tag "noindex, nofollow";
        include /etc/nginx/naxsi.rules;
    }

#    location /.well-known/carddav {
#      return 301 $scheme://$host/remote.php/dav;
#    }

#    location /.well-known/caldav {
#      return 301 $scheme://$host/remote.php/dav;
#    }

    location ~ /\.ht {
        deny all;
    }
}
